<h1>Welcome to ESpY</h1>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, :container => false %>
</div>
<% @places.each do | place | %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p>
        <% if place.photos.last.present? %>
        <br/>
        <h2><%= place.photos.last.caption %></h2>
        <%= image_tag place.photos.last.picture, class: 'index-picture'%>
        <br/>
        <% end %>
    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

          <% if place.comments.present? %>
          <div class="col-12">
            <blockquote>
              <% if place.comments.last.humanized_rating %>
                  <b><%= place.comments.last.humanized_rating %></b> -
              <% end %>
              <%= place.comments.last.message %>
              <small>Left by: <%= place.comments.last.user.email %></small>
            </blockquote>
          </div>
        <% end %>

    </div>

<% end %>


